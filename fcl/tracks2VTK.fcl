#include "services_microboone_basic.fcl"

process_name: viz

source : {
  module_type: RootInput
  maxEvents: -1
}

services : {

  message : {
    debugModules : ["*"]
    suppressInfo : []

     destinations : {
       LogToConsole : {
         type       : "cout"
         threshold  : "DEBUG"
     }
   }
  } // end of message services

  CatalystLive: {}
}

physics : {

  producers : {

    vtkTracks : {
      module_type : Tracks2VTK
      inputTags : ["pandoraCosmicKHit", "trackkalmanhit", "stitchkalmanhit", "pandoraCosmic", "pmtrack",
                   "pandoraNuPMA", "pandoraNu", "pandoraNuKHit"]
    }
  }

  analyzers : {
    show : {
      module_type : ShowVtkVizObjectsInEvent
    }

    live : {
      module_type : CatalystLiveVtkViz
     }

    write : {
      module_type: WriteVtkVizData
      baseFileName : "viz/tracks"
    }
  }

  path1 : [ vtkTracks ]
  endpaths : [show, live]
}

services.ExptGeoHelperInterface: @local::microboone_geometry_helper
services.Geometry: @local::microboone_geo